{
  "env": {
    "commonjs": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "tsconfigRootDir": "./",
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/no-import-module-exports": "off"
  },
  "overrides": [
    {
      "files": [
        "jest.setup.js"
      ],
      "rules": {
        // Disable ESLint rules specific to jest.setup.js file
        "no-undef": "off"
        // Add other rules to disable if needed
      }
    }
  ]
}
